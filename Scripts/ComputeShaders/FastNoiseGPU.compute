void CalculateFractalBounding()
{
	float amp = m_gain;
	float ampFractal = 1;
	for (int i = 1; i < m_octaves; i++)
	{
    	ampFractal += amp;
    	amp *= m_gain;
	}
	m_fractalBounding = 1 / ampFractal;
}

