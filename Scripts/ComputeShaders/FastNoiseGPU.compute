		{
			for (int yi = yr - 1; yi <= yr + 1; yi++)
			{
				for (int zi = zr - 1; zi <= zr + 1; zi++)
				{
					float3 vec = CELL_3D[Hash3D(m_seed, xi2, yi, zi) & 255];

